<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
   <div> Name: </div>

    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <div> Email: </div>
    <%= f.text_field :email %>
  </div>
  
  <div class="form-group">
   <div> Password: </div>
    <%= f.password_field :password %>
  </div>
  
  <div class="form-group">
    <div> Password Confirmation:  </div>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
  
<% end %>